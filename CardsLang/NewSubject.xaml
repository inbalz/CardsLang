<Page x:Class="CardsLang.NewSubject"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CardsLang"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="NewSubject">

    <Grid>
        <Grid x:Name="newSubjectWin">
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionColorKey}}"/>
            </Grid.Background>
            <Label x:Name="labelSubject" Content="Subject" HorizontalAlignment="Left" Height="23" Margin="10,19,0,0" VerticalAlignment="Top" Width="66"/>
            <TextBox x:Name="textBoxSubject" HorizontalAlignment="Left" Height="23" Margin="147,19,0,0" TextWrapping="Wrap" Text="Write Subject" VerticalAlignment="Top" Width="120"/>
            <Button x:Name="buttonAddCard" Content="Add Card" HorizontalAlignment="Left" Height="21" Margin="197,67,0,0" VerticalAlignment="Top" Width="80" Click="buttonAddCard_Click"/>
            <TextBox x:Name="textBoxFront" HorizontalAlignment="Left" Height="18" Margin="30,107,0,0" TextWrapping="Wrap" Text="Front" VerticalAlignment="Top" Width="117" TextChanged="textBoxFront_TextChanged"/>
            <TextBox x:Name="textBox_Back" HorizontalAlignment="Left" Height="18" Margin="169,107,0,0" TextWrapping="Wrap" Text="Back" VerticalAlignment="Top" Width="108" TextChanged="textBox_Back_TextChanged"/>

        </Grid>

    </Grid>
</Page>
