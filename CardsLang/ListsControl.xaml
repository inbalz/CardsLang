<Page x:Class="CardsLang.ListsControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CardsLang"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ListsControl">

    <Grid>
        <Button x:Name="buttonAddList" Content="Add list" HorizontalAlignment="Left" Height="28" Margin="30,111,0,0" VerticalAlignment="Top" Width="100" Click="buttonAddList_Click"/>
        <TextBox x:Name="textBoxListName" HorizontalAlignment="Left" Height="28" Margin="166,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="107" TextChanged="textBoxListName_TextChanged"/>

    </Grid>
</Page>
